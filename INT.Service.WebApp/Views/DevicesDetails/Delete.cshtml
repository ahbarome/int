@model INT.Service.DAL.Model.Tbl_DetalleMaquinaOnLine

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<h3>Desea eliminar este registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Dispositivo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tbl_MaquinaOnLine.NombreMaquina)
        </dd>

