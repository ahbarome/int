@model INT.Service.DAL.Model.CurrentDevice

@{
    ViewBag.Title = "Editar";
}

<h2 class="text-uppercase">Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CurrentDevice</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FromIpAddress)

        <div class="form-group">
            <label class="control-label col-md-2">Servidor Descarga</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ToDataBase, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ToDataBase, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.SyncId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
